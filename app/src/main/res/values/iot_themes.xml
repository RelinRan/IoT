<resources>
    <!--全透明背景的Dialog主题-->
    <style name="IoT.Theme.Dialog.Transparent.Background" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@drawable/iot_window_bg</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--半透明背景的Dialog主题-->
    <style name="IoT.Theme.Dialog.Translucent.Background" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!--窗口进入退出缩放动画-->
    <style name="IoT_Window_Animation_Scale" parent="android:Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/iot_anim_scale_max</item>
        <item name="android:windowExitAnimation">@anim/iot_anim_scale_min</item>
    </style>
    <!--窗口进入退出底部动画-->
    <style name="IoT_Window_Animation_Bottom" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/iot_anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/iot_anim_bottom_exit</item>
    </style>
</resources>